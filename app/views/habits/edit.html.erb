<main class="calendar-page project-page">
  <section class="calendar-panel project-panel">
    <header class="calendar-panel__header">
      <div>
        <p class="calendar-panel__eyebrow">Habits</p>
        <h1>習慣編集</h1>
        <p class="calendar-panel__lead">習慣情報を更新し、目標達成に向けて継続しましょう。</p>
      </div>
      <div class="calendar-panel__actions">
        <%= link_to "詳細へ戻る", habit_path(@habit.id), class: "btn btn--ghost" %>
      </div>
    </header>

    <%= form_with model: @habit, class: "project-form__body" do |f| %>
      <div class="project-form__grid">
        <div class="form-field">
          <%= f.label :habit_name, "習慣名" %>
          <%= f.text_field :habit_name, required: true, class: "form-control", placeholder: "例: 毎朝30分読書" %>
        </div>
        <div class="form-field">
          <%= f.label :start_day, "開始日" %>
          <%= f.date_field :start_day, required: true, class: "form-control" %>
        </div>
      </div>

      <div class="project-form__actions">
        <%= f.submit "習慣を更新", class: "btn" %>
      </div>
    <% end %>
  </section>
</main>